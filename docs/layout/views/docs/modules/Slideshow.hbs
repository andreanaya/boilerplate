<h1>{{title}}</h1>

<div class="constrain">
	<div class="slideshow" data-component="slideshow" data-interval="2">
		<div class="slideshow__images" data-container data-touch-area>
			<img class="slideshow__image" src="http://lorempixel.com/720/480/cats/1" data-slide/>
			<img class="slideshow__image" src="http://lorempixel.com/720/480/cats/3" data-slide/>
			<img class="slideshow__image" src="http://lorempixel.com/g/720/480/cats/4" data-slide/>
			<img class="slideshow__image" src="http://lorempixel.com/720/480/cats/5" data-slide/>
		</div>


		<div class="slideshow__content" data-container>
			<div class="slideshow__copy" data-slide>Slide 1</div>
			<div class="slideshow__copy" data-slide>Slide 2</div>
			<div class="slideshow__copy" data-slide>Slide 3</div>
			<div class="slideshow__copy" data-slide>Slide 4</div>
		</div>

		<ul class="slideshow__bullets">
			<li class="slideshow__bullet" data-bullet>1</li>
			<li class="slideshow__bullet" data-bullet>2</li>
			<li class="slideshow__bullet" data-bullet>3</li>
			<li class="slideshow__bullet" data-bullet>4</li>
		</ul>

		<div class="slideshow__prev" data-prev>Prev</div>
		<div class="slideshow__next" data-next>Next</div>

		<div class="slideshow__toggle" data-toggle>Toggle</div>
	</div>
</div>

